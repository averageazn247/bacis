<div class="hero-unit">
<p id="notice"><%= notice %></p>
<script>
   jQuery(window).on('mercury:ready', function() { Mercury.saveUrl = '/events/' + <%= @event.id %> + "/mercury_update"; });
</script>
<p>
   
  <h3>  
      <div class="content">
  <div id="page_topic" class="mercury-region" data-type="editable" data-method="PUT"  data-mercury='full'>
 <%=  @event.title %>
  
  </div>
  </div> </h3>
</p>
<p>


</p>
<p><p>
  <b>Date:</b>
  
      <div class="content">
  <div id="page_date" class="mercury-region" data-type="editable" data-method="PUT"  data-mercury='full'>
  <%= @event.dayof %>
  </div>
  </div>
</p>
  <b>Start:</b>
      <div class="content">
  <div id="page_time" class="mercury-region" data-type="editable" data-method="PUT"  data-mercury='full'>
    	<% if @event.start.hour > 12 %>
		 			<%= @event.start.hour - 12 %>:
			
				<% if @event.start.min == 0 %>
				  	00 PM
				<% else %>
				
					<%= @event.start.min %> PM
				<% end %>
			
			
		<%else%>
		 
			<%= @event.start.hour %>:
				<% if @event.start.min ==0 %>
				  	00 AM
				<% else %>
				
					<%= @event.start.min %> AM
				<% end %>
					
				
      	<% end%></div>
				</div>
</p>


<p>
	<b>Address:</b>
	    <div class="content">
  <div id="page_address" class="mercury-region" data-type="editable" data-method="PUT"  data-mercury='full'>
   <%= raw @event.address %> 
    
    
  </div>
  </div>
</p>
<p>
  <b>Description:</b>
    <div class="content">
  <div id="page_body" class="mercury-region" data-type="editable" data-method="PUT"  data-mercury='full'>
   <%= raw @event.desc %> 
    
    
  </div>
  </div>
</p>
<% if current_user != nil%>
	<% if  current_user.admin or current_user.name== @event.maker %>
	<%= link_to 'edit date/time', edit_event_path(@event)  %> |
	<%= link_to "Edit Event Description", "/editor" + request.path, id: "edit_link", data: {save_url: mercury_update_event_path(@event)} %>|
	<%= link_to 'Destroy', @event, method: :delete, data: { confirm: 'Are you sure?' } %> |
	<% end %>
	<%= link_to 'Back', events_path %>
<%end %>
</div>
