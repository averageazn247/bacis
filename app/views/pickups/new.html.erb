<div class="hero-unit">
	<h6>Create a pick up request</h6>
  <script>
var myPosition = new Array();

$(document).ready(function() {

     navigator.geolocation.getCurrentPosition(
             onSuccess,
             onError, {
                 enableHighAccuracy: true,
                 timeout: 20000,
                 maximumAge: 120000
             }
     );
   function onSuccess(position) {
       myPosition[0] = position.coords.latitude;
       myPosition[1] = position.coords.longitude;
   }

    function onError(err) {
       var message;

       switch (err.code) {
       case 0:
         message = 'Unknown error: ' + err.message;
         break;
       case 1:
         message = 'You denied permission to retrieve a position.';
         break;
       case 2:
         message = 'The browser was unable to determine a position: ' + error.message;
         break;
       case 3:
         message = 'The browser timed out before retrieving the position.';
         break;
       }
    }
});
   </script>  
<%= form_for(@pickup) do |f| %>
	
		<%= f.label :address, "Final Distination"%><br />
	  <%= f.text_field :address %></div>
	  <%= f.hidden_field :now, :value => Time.now %>
	   <%= f.hidden_field :name, :value => current_user.name %> 
	    <%= f.hidden_field :lat, :value => @ip.latitude %>   
	     <%= f.hidden_field :long, :value => @ip.longitude %>  
 
 <br />
 <br />
  <div><%= f.submit "Get me Now" , class:'btn'%></div>
 
	<%end %>
	</div>
